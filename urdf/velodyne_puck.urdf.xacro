<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="velodyne_puck"
               params="parent_link
                       xyz:='0.0 0.0 0.0'
                       rpy:='0.0 0.0 0.0'
                       robot_namespace:=''
                       component_name:=''
                       use_tf_prefix:=True">

    <!-- <xacro:if value="${component_name == ''}">
      <xacro:property name="component_name" value="velodyne" />
    </xacro:if> -->
    <!-- ^ removed for compatibility with hw driver -->

    <xacro:property name="robot_namespace_slash" value="${robot_namespace + '/' if robot_namespace != '' else ''}" />
    <xacro:property name="tf_prefix" value="${robot_namespace_slash if use_tf_prefix in ['True', True] else ''}" />
    <xacro:property name="component_name_underscore" value="${component_name + '_' if component_name != '' else ''}" />
    <xacro:property name="component_name_slash" value="${component_name + '/' if component_name != '' else ''}" />

    <xacro:property name="component_name_underscore_nonempty" value="${component_name_underscore if component_name_underscore != '' else 'velodyne_'}" />
    <!-- ^ in case no name is provided, generate "..._link" instead of just "link" -->

    <joint name="${parent_link.rstrip('_link')}_to_${component_name_underscore_nonempty}joint" type="fixed">
      <origin xyz="${xyz}" rpy="${rpy}" />
      <parent link="${parent_link}" />
      <child link="${component_name_underscore_nonempty}link" />
    </joint>

    <link name="${component_name_underscore_nonempty}link">
      <!-- <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://husarion_components_description/meshes/velodyne_puck.dae" />
        </geometry>
      </visual> -->

      <!-- TODO Remove simple visuals when mesh is ready -->
      <visual>
        <origin xyz="0.0 0.0 ${0.072/2.0}" rpy="0.0 0.0 0.0" />
        <geometry>
          <cylinder radius="${0.103/2.0}" length="0.072" />
        </geometry>
        <material name="LightGrey">
          <color rgba="0.6 0.6 0.6 1.0" />
        </material>
      </visual>

      <collision>
        <origin xyz="0.0 0.0 ${0.072/2.0}" rpy="0.0 0.0 0.0" />
        <geometry>
          <cylinder radius="${0.103/2.0}" length="0.072" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 ${0.072/2.0}" rpy="0.0 0.0 0.0" />
        <mass value="0.830" />
        <inertia ixx="0.001111" ixy="0.0"      ixz="0.0"
                                iyy="0.001109" iyz="0.0"
                                               izz="0.001493" />
      </inertial>
    </link>

    <joint name="${component_name_underscore_nonempty}to_${component_name_underscore}velodyne_joint"
      type="fixed">
      <origin xyz="0.0 0.0 0.0378" rpy="0.0 0.0 0.0" />
      <parent link="${component_name_underscore_nonempty}link" />
      <child link="${component_name_underscore}velodyne" />
    </joint>

    <link name="${component_name_underscore}velodyne" />

    <gazebo reference="${component_name_underscore}velodyne">
      <!-- gpu_lidar has to be set, CPU lidar doesn't work in ignition -
      https://github.com/gazebosim/gz-sensors/issues/26 -->
      <sensor type="gpu_lidar" name="${robot_namespace_slash}${component_name_underscore}lidar">
        <visualize>false</visualize>
        <update_rate>10.0</update_rate>

        <ray>
          <scan>
            <horizontal>
              <samples>900</samples>
              <resolution>1</resolution>
              <min_angle>-${pi}</min_angle>
              <max_angle>${pi}</max_angle>
            </horizontal>
            <vertical>
              <samples>16</samples>
              <resolution>1</resolution>
              <min_angle>-${15.0/180.0*pi}</min_angle>
              <max_angle>${15.0/180.0*pi}</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.4</min>
            <max>100.0</max>
            <resolution>0.003</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.0008</stddev>
          </noise>
        </ray>

        <topic>${robot_namespace_slash}${component_name_slash}velodyne_points</topic>
        <gz_frame_id>${tf_prefix}${component_name_underscore}velodyne</gz_frame_id>
        <always_on>true</always_on>
      </sensor>
    </gazebo>
  </xacro:macro>
</robot>
